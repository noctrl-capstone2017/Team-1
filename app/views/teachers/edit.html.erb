<%= form_for(@teacher) do |f| %>
  <% if @teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>
      <ul>
      <% @teacher.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="page-header cap17-header vertical-align">
				<div class="col-xs-11">
					<h2>Teacher Profile for <%= @teacher.teacher_name %></h2>
				</div>
				<div class="col-xs-1">
					<div class="profile-sq i-<%= @teacher.color %>" >
						<span class="fa fa-<%= @teacher.teacher_icon_name %> fa-3x teacher-icon "></span>
					</div>
				</div>
	</div><!--End page-header-->
	
	<!--School profile area -->
	<!--<form class="form-horizontal" action="teacher1.html">-->
	
		 	<!--ID & Name -->
		 	<div class="row form-row">
				<div class="col-xs-2 col-xs-offset-1"><h4> Teacher ID: </h4></div>
				<div class="col-xs-2">
					<%= f.text_field :user_name %>
				</div>
			</div>
			
			<!-- Teacher Name Field -->
    	<div class="row form-row">
        <div class="col-xs-1 col-xs-offset-1"><h4> Name: </h4></div>
       		<div class="col-xs-4 col-xs-offset-1">
    			<%= f.text_field :teacher_name %>
    		</div>
    	</div>   <!-- row -->
    	
    	<!-- Email -->
			<div class="row form-row">
				<div class="col-xs-2 col-xs-offset-1"><h4> Email: </h4></div>
				<div class="col-xs-4">
					<%= f.text_field :teacher_email %>
				</div>
			</div>
			
			<!-- a little extra space after name/email -->
			<div class="form-spacer">	&nbsp;</div>
			
			<!-- Admin field -->
			<div class="row form-row">
				<div class="col-xs-2 col-xs-offset-1"><h4> Admin: </h4></div>
				<div class="col-xs-4">
					<%= f.check_box :admin_powers %>
				</div>
			</div>
			
			<!-- Teacher color field -->
			<div class="row form-row">
				<div class="col-xs-2 col-xs-offset-1"><h4> Color: </h4></div>
				<div class="col-xs-4">
					<%= f.select :color, [ 'plum', 'red', 'yellow', 'cyan'] %>
				</div>
		 	</div>
		 	
		 	<!-- Teacher icon field -->
			<div class="row form-row">
				<div class="col-xs-1 col-xs-offset-1"><h4> Icon: </h4></div>
				<div class="col-xs-4 col-xs-offset-1">
					<%= f.select :teacher_icon_name, [ 'apple', 'graduationHat', 'book', 'pencil'] %>
				</div>
			</div>
			
			<!-- Teacher Description Field -->
			<div class="row form-row">
				<div class="col-xs-2 col-xs-offset-1"><h4>Description: </h4></div>
				<div class="col-xs-6">
					<%= f.text_area :teacher_description %>
				</div>
			</div>
				
			<div class="row action-buttons-row">
    			<div class="col-sm-1 col-sm-offset-1">
    				<%= f.submit %>
    			</div>
    			<div class="col-sm-1 col-sm-offset-1">
    				<%= link_to 'Cancel', teachers_path %>
    			</div>
  		</div>
<% end %>

