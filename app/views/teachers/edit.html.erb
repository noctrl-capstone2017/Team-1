				<div class ="action-sq i-navy center-block">
					<%= link_to '', @teacher %><span class="fa fa-key fa-4x student-icon"></span></a>
				</div>
				<p><%= link_to '', @teacher %><span class="student-icon-text">Change Password</span></a></p>
			</div>
		</div>
