<!-- Modified by Robert Herrera -->
<p id="notice"><%= notice %></p>

<!-- page header -->
	<div class="page-header vertical-align">
		<div class="col-xs-11">
			<h2>All Schools<small> view/edit all Schools in Dinner Out</small></h2>
		</div>
		<div class="col-xs-1 center-block">
			<div class="header-sq i-plum" title="Bianca17">
				<span class="fa fa-apple fa-3x teacher-icon"></span>
			</div>
		</div>
	</div><!--End page header-->
   
<!--New Teacher Button-->
    <div class="row first-content-row">
    	<div class="col-xs-3">
			<form action='schools/new'>
				<button type="submit" class="col-sm-offset-1 btn btn-lg btn-success">
					<i class="fa fa-plus-square-o"></i>  
					New School
				</button>
			</form>
		</div><!--End col-->
    </div><!--End row -->

<!--Teacher display area -->
   	<table class="table table-striped table-hover table-responsive teachers-table">
   		<thead>
   			<tr>
				<th class="col-xs-1"></th>
				<th>ID</th>
				<th>School</th>
				<th>Description</th>
			</tr>
		</thead>
		<tbody>
		  <% @schools.each do |school| %>
		  <tr>
		  	<tr data-link = "<%= edit_school_path(school) %>">
				<td>
					<div class="table-sq i-<%= school.color %>">
						<span class="fa fa-home fa-3x"></span>  <!--Always the Bootstrap glyph school Icon-->
						
					</div>
				</td>
				<td>
				 	<%= school.school_icon_name %>
				</td>
				<td>
					<p class="listText">
					<%= school.school_name %>
					</p>
				</td>
				<td>
					<p class="listText">
					<%= school.school_description %>
					</p>
				</td>
	        </tr>
	      <% end %>
    	</tbody>
    </thead>