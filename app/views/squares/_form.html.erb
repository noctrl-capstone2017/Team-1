<!-- Michael Loptien -->

<%= form_for(square) do |f| %>
  <% if square.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(square.errors.count, "error") %> prohibited this square from being saved:</h2>

      <ul>
      <% square.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- ID field -->
  <div class="row form-row">
  	<div class="col-sm-1 col-sm-offset-1">
  		<h4> ID:</h4>
  	</div> 
  	<div class="col-sm-1">
      <%= f.text_field :square_id, class: "form-control" %>
  	</div>
  </div>   <!-- form-row -->

  <!-- Show Type Field -->
  <div class="row form-row">
  	<div class="col-sm-1 col-sm-offset-1">
  		<h4>Type: </h4>
  	</div>
  	<div class="col-md-offset-0 col-sm-offset-0 col-sm-2">
      <%= f.select :square_type,[['Duration',1],['Frequency',2],['Interval',3]] %>
  	</div>
  </div>   <!-- form-row -->

  <!-- Show Square Color Field -->
  <div class="row form-row">
		<div class="col-xs-1 col-xs-offset-1">
		  <h4>Color: </h4>
		</div>
		<div class="col-sm-4 col-md-offset-0 col-sm-offset-0">
      <%= f.select :color, ['gray', 'navy','red','yellow',
      ['ligh blue', 'ltblue'],['light orange','ltorange'],'green','lavendar','plum','mint','pink',
      ['dark orange','dkorange'],'aqua']%>
		</div>
	</div>

  <div class="" form-spacer="">	&nbsp;</div>
	
	<!-- Square Description field -->
	<div class="row form-row">
		<div class="col-sm-2 col-sm-offset-1">
			<h4>Description:</h4>
		</div>
		<div class="col-sm-4">
		  <%= f.text_area :square_description, class:"form-control" %>	
		</div>
	</div>   <!-- form-row -->

<!-- This needs to be an invisible field pulling data from logged in teacher / admin -->
<!--  <div class="field">
    <%= f.label :school_id %>
    <%= f.number_field :school_id %>
  </div>-->

  <!-- This area displays the save or cancel buttons
   It uses an If statment to test a passed in value "isNew"
   to determine which button text will show -->
  <div class="row action-buttons-row">
	  <div class="col-xs-4 col-xs-offset-1 text-center"> 
      <% if local_assigns[:isNew] %>
        <%= f.submit "Add New Square", class: "btn btn-success"%>
						&nbsp; &nbsp; &nbsp;
	      <%= link_to 'Cancel', squares_path, class: "btn btn-danger" %>
      <% else %>
        <%= f.submit "Save Changes", class: "btn btn-success"%>
						&nbsp; &nbsp; &nbsp;
	      <%= link_to 'Cancel', squares_path, class: "btn btn-danger" %>        
      <% end %>
    </div>
  </div>
<% end %>
