<!--Michael Loptien -->

<p id="notice"><%= notice %></p>

<!-- Page Header -->
<div class="page-header vertical-align">
	<div class="col-xs-11">
	  <h2>All Students<small> - manage students at school TrngPte</small></h2><!-- Dynamically fills in with school id -->
	</div>
	<div class="col-xs-1 center-block">
		<div class="header-sq i-ltblue" title="Turning Pointe Autism Foundation"> <!--Need to add code for teachers icon-->
					<span class="fa fa-home fa-3x teacher-icon"></span>
		</div>
	</div>
</div><!--End page header-->
<br>

<!-- New Student Button, unable to next "+" symbol in button -->
<%= link_to "New Student", new_student_path, class:"col-sm-offset-1 btn btn-lg btn-success" %>

<!--Table Body -->
<br>
<table class="table table-striped table-hover table-responsive schools-table">
  <!-- Table Header -->
  <thead>
    <tr>
      <th></th>
      <th>ID</th>
      <th>Name</th>
      <th>Last Session</th>
    </tr>
  </thead>
  
  <!-- Table Body -->
  <tbody>
    <% @students.each do |student| %>
    
    <!--SOURCE for data-link: http://stackoverflow.com/questions/9945620/making-a-table-row-into-a-link-in-rails-->
      <tr data-link = "<%= edit_student_path(student) %>">
        <td>
          <div class="table-sq i-<%= student.color %>">                       <!--Generate Student Color-->
					<i class="fa fa-<%= student.student_icon %> fa-2x table-icon"></i>  <!--Generate Student Icon-->
				  </div>
        </td>
        <td><%= student.student_icon_name %></td>
        <td><%= student.student_name %></td>
        <td>**Last Session***</td>            <!-- Need to link to last Student Session -->
      </tr>
    <% end %>
  </tbody>
</table>




