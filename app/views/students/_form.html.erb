    <%= f.text_field :student_icon_name %>
  </div>

  <div class="field">
    <%= f.label :student_contact_info %>
    <%= f.select :student_contact_info, ['bug', 'car','puzzle-piece','flash',
    'flask','futbol-o','gamepad','heart','leaf','paper-plane','paw','star',
    'graduation-cap']%>
  </div>

  <div class="field">
    <%= f.label :student_description %>
    <%= f.text_area :student_description %>
  </div>

  <div class="field">
    <%= f.label :student_icon %>
    <%= f.text_field :student_icon %>
  </div>

  <div class="field">
    <%= f.label :color %>
    <%= f.select :color, ['grey', 'navy','red','yellow',
    'ligh blue','light orange','green','lavendar','plum','mint','pink',
    'dark orange','aqua']%>
  </div>

